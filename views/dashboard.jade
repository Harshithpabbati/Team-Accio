doctype html
html
  title Dashboard
  head
  body
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
    link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous")
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')
    // css files
    link(href='css/bootstrap.css', rel='stylesheet', type='text/css')
    // bootstrap css
    link(href='css/style.css', rel='stylesheet', type='text/css')
    // custom css
    // //css files
.container
  .logout
    a.btn.btn-link(href='/',style="float:right;") Log Out
  .row
    .col-md-6
      h2 Dashboard
      a.btn.btn-success(href='#popup-packages') Add Package
    table.table.table-striped
      thead
        tr
          th Name
          th Roll-No
          th Courier Name
          th Status
          th Actions
      each package in packages
        tbody
          tr 
            th #{package.name}
            th #{package.rollno}
            th #{package.couriername}
            th #{package.status}
            th 
              a.btn(href='#popup-packages')
                i.fas.fa-pencil-alt(aria-hidden='true') 
              a.btn(href='#popup-packages')
                i.far.fa-trash-alt(aria-hidden='true')
  #popup-packages.popup-effect
    .popup.popup-register
      .login.px-sm-4.mx-auto.mw-100
        h5.mb-4 Details about the packages
        form(action='/packages', method='post')
          .form-group
            input.form-control(type='text', name='name', placeholder='Name', required='')
          .form-group
            input.form-control(type='text', name='rollno', placeholder='Roll-No', required='')
          .form-group
            input.form-control(type='text', name='couriername', placeholder='Courier Name', required='')
          .form-group
            input.form-control(type='text', name='status', placeholder='Status(Yes/No)', required='')
          center
            button.btn.btn-success.submit(type='submit') Add Package
      a.close(href='#') Ã—
